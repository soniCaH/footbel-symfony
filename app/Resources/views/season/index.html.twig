{% extends 'base.html.twig' %}

{% block body %}
    <h1>Season list</h1>

    <a href="{{ path('admin_homepage') }}">Back to overview</a>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Shorthand</th>
                <th>Label</th>
                <th>Start</th>
                <th>End</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for season in seasons %}
            <tr>
                <td><a href="{{ path('season_show', { 'id': season.id }) }}">{{ season.id }}</a></td>
                <td>{{ season.shorthand }}</td>
                <td>{{ season.label }}</td>
                <td>{% if season.start %}{{ season.start|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if season.end %}{{ season.end|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('season_show', { 'id': season.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('season_edit', { 'id': season.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('season_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
