{% extends 'base.html.twig' %}

{% block body %}
    <h1>Level</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ level.id }}</td>
            </tr>
            <tr>
                <th>Shorthand</th>
                <td>{{ level.shorthand }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ level.label }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('level_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('level_edit', { 'id': level.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
