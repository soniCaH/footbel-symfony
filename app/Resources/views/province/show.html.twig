{% extends 'base.html.twig' %}

{% block body %}
    <h1>Province</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ province.id }}</td>
            </tr>
            <tr>
                <th>Shorthand</th>
                <td>{{ province.shorthand }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ province.label }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('province_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('province_edit', { 'id': province.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
